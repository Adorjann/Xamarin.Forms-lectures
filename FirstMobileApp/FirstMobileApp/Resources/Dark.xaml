<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.Resources.Dark">
    
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#2e4e4e"/>
    </Style>
    
    <Style x:Key="SliderStyle" TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="White"/>
        <Setter Property="MaximumTrackColor" Value="White"/>
    </Style>
    <Style x:Key="sLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
    </Style>
    
</ResourceDictionary>
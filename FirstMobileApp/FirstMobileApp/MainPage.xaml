<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.MainPage"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="OrangeButton">
            <Setter  Property="BackgroundColor" Value="#ffa500"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="40" />
        </Style>
        <Style TargetType="Button" x:Key="WhiteButton">
            <Setter  Property="BackgroundColor" Value="#ffffff"/>
            <Setter Property="FontSize" Value="40" />
        </Style>
    </ContentPage.Resources>
    

    <Grid Padding="10" ColumnSpacing="2" RowSpacing="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Text="42"
               TextColor="White"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               FontSize="100"/>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                 Text="C"  Style="{StaticResource Key=OrangeButton}" FontSize="25"/>
        <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                Text="BACK" Style="{StaticResource Key=OrangeButton}" FontSize="25"/>
        
        <Button Grid.Row="2" Grid.Column="0" Text="7" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="2" Grid.Column="1" Text="8" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="2" Grid.Column="2" Text="9" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="2" Grid.Column="3" Text="/" Style="{StaticResource Key=OrangeButton}"/>
        
        <Button Grid.Row="3" Grid.Column="0" Text="4" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="3" Grid.Column="1" Text="5" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="3" Grid.Column="2" Text="6" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="3" Grid.Column="3" Text="*" Style="{StaticResource Key=OrangeButton}"/>
        
        <Button Grid.Row="4" Grid.Column="0" Text="1" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="4" Grid.Column="1" Text="2" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="4" Grid.Column="2" Text="3" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="4" Grid.Column="3" Text="-" Style="{StaticResource Key=OrangeButton}"/>
        
        <Button Grid.Row="5" Grid.Column="0" Text="0" Style="{StaticResource Key=WhiteButton}"/>
        <Button Grid.Row="5" Grid.Column="1" Text="." Style="{StaticResource Key=OrangeButton}"/>
        <Button Grid.Row="5" Grid.Column="2" Text="=" Style="{StaticResource Key=OrangeButton}"/>
        <Button Grid.Row="5" Grid.Column="3" Text="+" Style="{StaticResource Key=OrangeButton}"/>
    </Grid>

</ContentPage>

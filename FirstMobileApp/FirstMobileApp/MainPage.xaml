<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.MainPage"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="OrangeButton">
            <Setter  Property="BackgroundColor" Value="#ffa500"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="40" />
        </Style>
        <Style TargetType="Button" x:Key="WhiteButton">
            <Setter  Property="BackgroundColor" Value="#ffffff"/>
            <Setter Property="FontSize" Value="40" />
        </Style>
    </ContentPage.Resources>
    

    <Grid Padding="10" ColumnSpacing="2" RowSpacing="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Text="0"
               TextColor="White"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               FontSize="85"
               x:Name="Display"/>
        <Button Grid.Row="1" Grid.Column="0" 
                 Text="C"  Style="{StaticResource Key=OrangeButton}" FontSize="25" Clicked="C_Clicked"/>
        <Button Grid.Row="1" Grid.Column="1" 
                Text="BACK" Style="{StaticResource Key=OrangeButton}" FontSize="25" Clicked="Back_Clicked"/>
        <Button Grid.Row="1" Grid.Column="2" Text="(" 
                Style="{StaticResource Key=OrangeButton}" x:Name="OpenBracket"/>
        <Button Grid.Row="1" Grid.Column="3" Text=")" 
                Style="{StaticResource Key=OrangeButton}" x:Name="ClosedBracket"/>
        
        <Button Grid.Row="2" Grid.Column="0" Text="7" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num7" />
        <Button Grid.Row="2" Grid.Column="1" Text="8" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num8"/>
        <Button Grid.Row="2" Grid.Column="2" Text="9" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num9"/>
        <Button Grid.Row="2" Grid.Column="3" Text="/" 
                Style="{StaticResource Key=OrangeButton}" x:Name="Division"/>
        
        <Button Grid.Row="3" Grid.Column="0" Text="4" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num4"/>
        <Button Grid.Row="3" Grid.Column="1" Text="5" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num5"/>
        <Button Grid.Row="3" Grid.Column="2" Text="6" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num6"/>
        <Button Grid.Row="3" Grid.Column="3" Text="*" 
                Style="{StaticResource Key=OrangeButton}" x:Name="Multiplication"/>
        
        <Button Grid.Row="4" Grid.Column="0" Text="1" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num1"/>
        <Button Grid.Row="4" Grid.Column="1" Text="2" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num2"/>
        <Button Grid.Row="4" Grid.Column="2" Text="3" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num3"/>
        <Button Grid.Row="4" Grid.Column="3" Text="-" 
                Style="{StaticResource Key=OrangeButton}" x:Name="Substraction"/>
        
        <Button Grid.Row="5" Grid.Column="0" Text="0" 
                Style="{StaticResource Key=WhiteButton}" x:Name="Num0"/>
        <Button Grid.Row="5" Grid.Column="1" Text="." 
                Style="{StaticResource Key=OrangeButton}" x:Name="Dot"/>
        <Button Grid.Row="5" Grid.Column="2" Text="="  Clicked="Equals_Clicked"
                Style="{StaticResource Key=OrangeButton}"/>
        <Button Grid.Row="5" Grid.Column="3" Text="+" 
                Style="{StaticResource Key=OrangeButton}" x:Name="Addition"/>
    </Grid>

</ContentPage>

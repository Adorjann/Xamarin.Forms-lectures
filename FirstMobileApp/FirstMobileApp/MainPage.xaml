<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.MainPage">
    <ContentPage.Resources>
        
    </ContentPage.Resources>
    

    <Grid Padding="10" ColumnSpacing="0" RowSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Text="42"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               FontSize="100"/>
        <Button Grid.Row="1" Grid.Column="0" Text="7" FontSize="40"/>
        <Button Grid.Row="1" Grid.Column="1" Text="8" FontSize="40"/>
        <Button Grid.Row="1" Grid.Column="2" Text="9" FontSize="40"/>
        <Button Grid.Row="1" Grid.Column="3" Text="/" FontSize="40"/>
        <Button Grid.Row="2" Grid.Column="0" Text="4" FontSize="40"/>
        <Button Grid.Row="2" Grid.Column="1" Text="5" FontSize="40"/>
        <Button Grid.Row="2" Grid.Column="2" Text="6" FontSize="40"/>
        <Button Grid.Row="2" Grid.Column="3" Text="*" FontSize="40"/>
        <Button Grid.Row="3" Grid.Column="0" Text="1" FontSize="40"/>
        <Button Grid.Row="3" Grid.Column="1" Text="2" FontSize="40"/>
        <Button Grid.Row="3" Grid.Column="2" Text="3" FontSize="40"/>
        <Button Grid.Row="3" Grid.Column="3" Text="-" FontSize="40"/>
        <Button Grid.Row="4" Grid.Column="0" Text="0" FontSize="40"/>
        <Button Grid.Row="4" Grid.Column="1" Text="." FontSize="40"/>
        <Button Grid.Row="4" Grid.Column="2" Text="=" FontSize="40"/>
        <Button Grid.Row="4" Grid.Column="3" Text="+" FontSize="40"/>
    </Grid>

</ContentPage>
